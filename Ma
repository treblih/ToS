rem boot.img
/usr/local/bin/bximage

gcc -c boot.s -gstabs+ -o boot.o &&
ld -Tboot.ld boot.o -o boot.elf -e c &&
objcopy -R .pdr -R .comment -R .note -S -O binary boot.elf boot.bin &&

gcc -c loader.s -gstabs+ -o loader.o &&
ld -Tloader.ld loader.o -o loader.elf &&
objcopy -R .pdr -R .comment -R .note -S -O binary loader.elf loader.bin &&

dd if=boot.bin of=boot.img bs=512 count=1 conv=notrunc &&
sudo mount -o loop boot.img /media/floppy -t vfat &&
sudo cp loader.bin /media/floppy &&
sudo umount /media/floppy
